public class Triangles {
    public static void stars (int c) {
        int i = -1;
        while (i <= c-2) {
            i++;
            int j=c;
            while (j >= 1) {
                j--;
                if(j>i){
                    System.out.print(" ");
                }else{
                    System.out.print("*");
                }
            }
            System.out.println();
        }

    }

    public static void main(String[] args) {
        stars(5);
    }
}

