public class Triangle {

    public static void stars (int c) {
            int i = 1;

                   while (i < c) {
                i++;
                int j=1;
                while (j < c) {
                    j++;
                   if(j<i){
                       System.out.print(" ");
                   }else{
                       System.out.print("*");
                   }


                }
                System.out.println();
            }

        }

        public static void main(String[] args) {
            stars(7);
        }
    }


